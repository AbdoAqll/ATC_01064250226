@model Models.ViewModels.EventViewModel
@{
    ViewData["Title"] = Model.Name;
    var source = Context.Request.Query["source"].ToString().ToLower();
    var isFromBookings = source == "bookings";
}

<!-- Left Section -->
<div class="details-card">
    <div class="card-header">
        <div class="header-content">
            <h2>@ViewData["Title"]</h2>
            <div class="header-actions">
                @if (!isFromBookings && !Model.IsBooked)
                {
                    <a asp-area="User" asp-controller="Booking" asp-action="Book" asp-route-id="@Model.Id" class="btn-primary">
                        <i class='bx bx-calendar-check'></i>
                        @Localizer["BookNowButton"]
                    </a>
                }
                <a asp-area="User" asp-controller="@(isFromBookings ? "Booking" : "Home")" asp-action="Index" class="btn-secondary">
                    <i class='bx bx-arrow-back'></i>
                    @Localizer["BackToListButton"]
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="event-image">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        </div>

        <div class="details-section">
            <h3>@Localizer["EventInformation"]</h3>
            <div class="details-grid-2">
                <div class="detail-item">
                    <label>@Localizer["NameLabel"]</label>
                    <p>@Model.Name</p>
                </div>
                <div class="detail-item">
                    <label>@Localizer["CategoryLabel"]</label>
                    <p>@Model.Category</p>
                </div>
                <div class="detail-item">
                    <label>@Localizer["DateLabel"]</label>
                    <p>@Model.Date.ToString("MMM dd, yyyy HH:mm")</p>
                </div>
                <div class="detail-item">
                    <label>@Localizer["PriceLabel"]</label>
                    <p>@Model.Price.ToString("C")</p>
                </div>
                <div class="detail-item">
                    <label>@Localizer["StatusLabel"]</label>
                    <p>
                        @{
                            var statusClass = Model.Date > DateTime.Now ? "active" : "pending";
                            var statusText = Model.Date > DateTime.Now ? Localizer["Upcoming"] : Localizer["Past"];
                        }
                        <span class="status-badge @statusClass">@statusText</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="details-section">
            <h3>@Localizer["VenueLabel"]</h3>
            <div class="details-grid-2">
                <div class="detail-item">
                    <label>@Localizer["LocationLabel"]</label>
                    <p>@Model.Venue</p>
                </div>
            </div>
        </div>

        <div class="details-section">
            <h3>@Localizer["DescriptionLabel"]</h3>
            <div class="details-grid-2">
                <div class="detail-item full-width">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Tags))
        {
            <div class="details-section">
                <h3>@Localizer["TagsLabel"]</h3>
                <div class="details-grid-2">
                    <div class="detail-item">
                        <div class="tags-container">
                            @foreach (var tag in Model.Tags.Split(new[] { ',', 'ØŒ' }, StringSplitOptions.RemoveEmptyEntries))
                            {
                                <span class="tag">@tag.Trim()</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Right Section -->
@if (!string.IsNullOrEmpty(Model.GoogleMapUrl))
{
    <div class="details-card">
        <div class="card-header">
            <h2>@Localizer["LocationLabel"]</h2>
        </div>
        <div class="card-body">
            <div class="map-container">
                <iframe src="@Model.GoogleMapUrl"
                        width="100%"
                        height="450"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>
    </div>
}

<style>
    .details-card {
        background-color: var(--bg-black-100);
        border-radius: 12px;
        box-shadow: 0 2px 8px var(--shadow-color);
        overflow: hidden;
        margin-bottom: 20px;
    }

    .card-header {
        padding: 20px;
        border-bottom: 1px solid var(--border-color);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
    }

    .card-header h2 {
        color: var(--text-black-900);
        font-size: 1.3rem;
        font-weight: 600;
        margin: 0;
    }

    .header-actions {
        display: flex;
        gap: 10px;
    }

    .btn-primary, .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: var(--primary-color);
        color: var(--white) !important;
    }

    .btn-primary:hover {
        transform: scale(1.05);
    }

    .btn-secondary {
        background-color: var(--bg-black-100);
        color: var(--text-black-700);
        border: 1px solid var(--bg-black-200);
    }

    .btn-secondary:hover {
        background-color: var(--bg-black-200);
        transform: scale(1.05);
    }

    .card-body {
        padding: 20px;
    }

    .event-image {
        width: 100%;
        margin-bottom: 20px;
        border-radius: 8px;
        overflow: hidden;
    }

    .event-image img {
        width: 100%;
        height: 300px;
        object-fit: cover;
    }

    .details-section {
        margin-bottom: 30px;
    }

    .details-section:last-child {
        margin-bottom: 0;
    }

    .details-section h3 {
        color: var(--text-black-900);
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 15px;
        padding-bottom: 8px;
        border-bottom: 2px solid var(--primary-color);
    }

    .details-grid-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }

    .detail-item {
        margin-bottom: 15px;
    }

    .detail-item.full-width {
        grid-column: 1 / -1;
    }

    .detail-item label {
        display: block;
        color: var(--text-black-700);
        font-weight: 500;
        margin-bottom: 5px;
        font-size: 0.9rem;
    }

    .detail-item p {
        color: var(--text-black-900);
        margin: 0;
        line-height: 1.5;
    }

    .tags-container {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .tag {
        background-color: var(--bg-black-50);
        color: var(--text-black-700);
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .map-container {
        width: 100%;
        height: 450px;
        border-radius: 8px;
        overflow: hidden;
    }

    .status-badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 500;
    }

    .status-badge.active {
        background-color: rgba(40, 167, 69, 0.1);
        color: var(--success-color);
    }

    .status-badge.pending {
        background-color: rgba(255, 193, 7, 0.1);
        color: var(--warning-color);
    }

    @@media screen and (max-width: 992px) {
        .header-content {
            flex-direction: column;
            align-items: stretch;
        }

        .header-actions {
            flex-direction: row;
            justify-content: center;
        }
    }

    @@media screen and (max-width: 576px) {
        .details-grid-2 {
            grid-template-columns: 1fr;
        }

        .event-image img {
            height: 200px;
        }

        .map-container {
            height: 300px;
        }

        .header-actions {
            flex-direction: column;
        }

        .btn-primary, .btn-secondary {
            width: 100%;
            justify-content: center;
        }
    }
</style> 